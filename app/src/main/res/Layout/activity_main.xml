<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintLayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Altura (m):"
        app:layout_constraintStart_toStartOfParent"
        app:layout_constraintTop_toTopOfParent" />

    <EditText
        android:id="@+id/editTextAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOfParent"
        app:layout_constraintTop_toBottomOf="@id/textViewAltura" />

    <RadioGroup
        android:id="@+id/radioGroupSexo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOfParent"
        app:layout_constraintTop_toBottomOf="@id/editTextAltura">

    <RadioButton
        android:id="@+id/radioButtonMasculino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masculino" />

    <RadioButton
        android:id="@+id/radioButtonFeminino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="Feminino" />
</androidx.constraintLayout.widget.ConstraintLayout>

<Button
android:id="@+id/buttonCalcular"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginStart="16dp"
android:layout_marginTop="16dp"
android:text="Calcular"
app:layout_constraintStart_toStartOfParent"
        app:layout_constraintTop_toBottomOf="@id/radioGroupSexo" />

    </androidx.constraintlayout.widget.ConstraintLayout>



